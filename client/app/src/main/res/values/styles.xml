<resources>
    <style name="style_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="style_text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="style_point_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_point_tone_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_channel_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
    <style name="style_channel_time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_161212</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
</resources>
